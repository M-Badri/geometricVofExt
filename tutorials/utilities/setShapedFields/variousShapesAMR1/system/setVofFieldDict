        rotate      (90 0 0);
    }

    box1
    {
        type            box;
        min             (1.24 0.24 0.24);
        max             (1.76 0.76 0.76);
        mode            add;
    }

    sphere1
    {
        type            sphere;
        radius          0.33;
        centre          (2.5 0.5 0.5);
        subdivision     4;
        mode            add;
    }

    cylinder1
    {
        type            cylinder;
        point1          (3.5 0.5 0.24);
        point2          (3.5 0.5 0.76);
        radius          0.35;
        vertices        32;
        mode            add;
    }

    cylinder2
    {
        type            cylinder;
        point1          (4.5 0.5 0.24);
        point2          (4.5 0.5 0.76);
        radius          0.35;
